# ============================================
# Backend Environment Variables
# ============================================
# Copia este archivo a .env y ajusta los valores según tu entorno

# Base de datos PostgreSQL
DATABASE_URL=postgresql+psycopg2://incu:incu@db:5432/incu

# CORS - Orígenes permitidos (separados por comas)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:80,http://localhost:443,capacitor://localhost,ionic://localhost,http://localhost

# JWT - Secret Key para tokens de autenticación
# IMPORTANTE: Cambiar en producción por una clave segura y aleatoria
SECRET_KEY=your-secret-key-change-in-production-use-env-var

# JWT - Algoritmo de encriptación
JWT_ALGORITHM=HS256

# JWT - Tiempo de expiración del token en minutos
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Collector - URLs de dispositivos ESP32 (separadas por comas)
ESP32_DEVICES=

# Collector - Periodo de recolección en milisegundos
COLLECT_PERIOD_MS=5000

# API Info (opcional)
API_TITLE=Incubadora API
API_VERSION=v0.1.0

# Model Info (opcional, para endpoints de ML)
MODEL_NAME=demo
MODEL_VER=v0.0.1

